<Window x:Class="LoLTimers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoLTimers"
        xmlns:userControls="clr-namespace:LoLTimers.UserControls"
        mc:Ignorable="d"
        Height="1000" Width="336" WindowStyle="None" Background="Black" Margin="0" Padding="0" ResizeMode="NoResize" Topmost="True" KeyDown="Window_KeyDown" KeyUp="Window_KeyUp">
    <Grid Margin="0" Background="Black">
        <userControls:TimerUserControl x:Name="TopTimerControl" Id="0" VerticalAlignment="Top" Height="200" Padding="0" />
        <userControls:TimerUserControl x:Name="JunglerTimerControl" Id="1" VerticalAlignment="Top" Height="200" Padding="0" Margin="0,200,0,0" />
        <userControls:TimerUserControl x:Name="MidTimerControl" Id="2" VerticalAlignment="Top" Height="200" Padding="0" Margin="0,400,0,0" />
        <userControls:TimerUserControl x:Name="BotTimerControl" Id="3" VerticalAlignment="Top" Height="200" Padding="0" Margin="0,600,0,0" />
        <userControls:TimerUserControl x:Name="SupportTimerControl" Id="4" VerticalAlignment="Top" Height="200" Padding="0" Margin="0,800,0,0" />
    </Grid>
</Window>
